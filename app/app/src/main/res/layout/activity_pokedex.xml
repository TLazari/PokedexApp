<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pokedex_background_light"
    tools:context=".PokedexActivity">

    <ImageView
        android:id="@+id/ivPokedexIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground"
        app:tint="@color/pokedex_accent"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/tvPokedexTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pokedex_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/pokedex_text_light"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/ivPokedexIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivPokedexIcon"
        app:layout_constraintBottom_toBottomOf="@id/ivPokedexIcon"
        android:layout_marginEnd="56dp"/>

    <TextView
        android:id="@+id/tvBoasVindas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boas_vindas_padrao"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/pokedex_text_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPokedexTitle"
        android:layout_marginTop="16dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvBoasVindas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:id="@+id/ivPokemon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/seu_pokemon"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/tvPokemonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="22sp"
                android:textColor="@color/pokedex_text_light"
                android:textStyle="bold"
                tools:text="Nome: Pikachu" />

            <TextView
                android:id="@+id/tvPokemonType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/pokedex_text_light"
                tools:text="Tipo: ElÃ©trico" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/llSearchPlaceholder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvBoasVindas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etPokemonSearch"
        app:layout_constraintWidth_percent="0.8">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_foreground"
            app:tint="@color/pokedex_text_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_pokemon_title"
            android:textColor="@color/pokedex_text_light"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_pokemon_subtitle"
            android:textColor="@color/pokedex_text_light"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/etPokemonSearch"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="@string/pokemon_search_hint"
        android:inputType="text"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/pokedex_text_light"
        android:textColorHint="@color/pokedex_text_light"
        android:background="@drawable/edit_text_background"
        app:layout_constraintBottom_toTopOf="@id/btnSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/pesquisar"
        android:textColor="@color/white"
        android:backgroundTint="@color/pokedex_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>